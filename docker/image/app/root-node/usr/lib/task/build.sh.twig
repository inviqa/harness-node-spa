#!/bin/bash

function task_build()
{
    set -o errexit
    set -o nounset
    set -o pipefail

    cd /app

    # shellcheck disable=SC2160
    if {{ @('tasks.build.when')|raw }}; then 
        :
    else
        return 0;
    fi

    {% for step in @('tasks.build.steps') -%}
    {{ step|raw }}
    {% endfor %}
}
